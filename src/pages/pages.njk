---
eleventyComputed:
    title: "{% if pagination.pageNumber > 0 %}Страница {{ pagination.pageNumber + 1 }}{% else %}krk-finance{% endif %}"
layout: page.njk
permalink: "{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
pagination:
    data: collections.episode
    size: 10
    reverse: true
---

{% include 'header.njk' %}
{% include 'aside.njk' %}

<main class="page__main main">
    <div class="main__intro box">
        <div class="content">
            <h1 class="main__title">krk-finance</h1>


        </div>
    </div>

    {%- for episode in pagination.items -%}
    <article class="episode box" id="e{{ episode.data.number }}">


        <div class="content">
            {{ episode.templateContent | safe }}
        </div>
    </article>
    {%- endfor -%}

    {% include 'pages.njk' %}
</main>

{% include 'footer.njk' %}
